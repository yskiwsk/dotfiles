include "104.mayu"

keymap global

# 追加のファンクションキーを認識する
def key F21			=	0x6C
def key F22			=	0x6D

# 追加の修飾キーを定義する
mod mod1			=	!!F21
key R-*F21			=	&Ignore
mod mod2			=	!!F22
key R-*F22			=	&Ignore

# システムワイドのキーバインド
key C-l				=	Escape
key C-Quote			=	Apps

# カーソル移動
key M1-h			=	Left
key M1-j			=	Down
key M1-k			=	Up
key M1-l			=	Right

key M1-u			=	Home
key M1-i			=	End

key M1-m			=	PageDown
key M1-Comma		=	PageUp

# ウインドウ切り替え
key M2-Tab			=	W-Tab
key M1-HyphenMinus	=	C-W-Left
key M1-Equal		=	C-W-Right
key M2-g			=	S-A-Tab
key M2-f			=	A-Tab
key M2-q			=	A-F4
key M1-o			=	W-Left
key M1-p			=	W-Right
key M1-LeftSquareBracket	=	W-Up

# コピペ系定番ショートカット Macのキーバインドと合わせる
key M2-a			=	C-a
key M2-z			=	C-z
key M2-x			=	C-x
key M2-c			=	C-c
key M2-v			=	C-v

# よく使うWindowsキーショートカット
key M1-*Space		=	W-s			# Cortana
key M2-*Space		=	C-Escape	# Start

key M2-s			=	W-x
key M2-d			=	W-d
key M2-w			=	W-w
key M2-e			=	W-e
key M2-r			=	W-r
key M2-t			=	W-t
key M2-b			=	W-b

key M2-_1			=	W-_1
key M2-_2			=	W-_2
key M2-_3			=	W-_3
key M2-_4			=	W-_4
key M2-_5			=	W-_5
key M2-_6			=	W-_6
key M2-_7			=	W-_7
key M2-_8			=	W-_8
key M2-_9			=	W-_9
key M2-_0			=	W-_0
key M1-_6			=	W-_6
key M1-_7			=	W-_7
key M1-_8			=	W-_8
key M1-_9			=	W-_9
key M1-_0			=	W-_0

