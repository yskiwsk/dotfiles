include "104.mayu"

keymap global

# 追加のファンクションキーを認識する
def key F14			=	0x65
def key F15			=	0x66

# 追加の修飾キーを定義する
mod mod4			=	!!F14
key R-*F14			=	&Ignore
mod mod5			=	!!F15
key R-*F15			=	&Ignore

# スペースをシフト兼用にする ワンショットモディファイアSandS(Space and Shift)
mod shift			+=	!!Space
key R-*Space		=	 &Ignore

# シフトをオルトにする
# (レジストリで変更することにしたためコメントアウト)
#mod shift			-=	!LeftShift !E0RightShift
#mod alt				+=	!LeftShift !E0RightShift
#key R-*LShift		=	&Ignore
#key R-*E0RShift		=	&Ignore

# エンターキーを右コントロール兼用にする ワンショットモディファイア
mod ctrl			+= !!Enter
key R-*Enter		=	&Ignore

# システムワイドのキーバインド
key C-j 			=	Enter
key C-m 			=	Enter
key C-l				=	Escape
key C-Semicolon		=	Backspace
key C-Quote			=	Delete
key M4-f 			=	Apps
# IMEトグル
# (Excelショートカットを優先するためコメントアウト)
#key C-*Space		=	$ToggleIME

# ファンクションキー(Outlookのビュー切り替えショートカットと衝突するのでコメントアウト)
#key C-*_1			=	~C-*F1
